<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserTestSuite">
    <test name="ChromeTest" parallel="none">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.tests.LoginPageTest"/>
            <class name="com.tests.HomePageTest"/>
            <class name="com.tests.CheckoutPageTest"/>
            <class name="com.tests.E2ETest"/>
        </classes>
    </test>
    <test name="EdgeTest" parallel="none">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="com.tests.LoginPageTest"/>
            <class name="com.tests.HomePageTest"/>
            <class name="com.tests.CheckoutPageTest"/>
            <class name="com.tests.E2ETest"/>
        </classes>
    </test>
    <test name="FirefoxTest" parallel="none">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.tests.LoginPageTest"/>
            <class name="com.tests.HomePageTest"/>
            <class name="com.tests.CheckoutPageTest"/>
            <class name="com.tests.E2ETest"/>
        </classes>
    </test>
</suite>
